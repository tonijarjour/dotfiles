# Volume Control
XF86AudioRaiseVolume
    amixer set Master unmute && amixer set Master 5%+

XF86AudioLowerVolume
    amixer set Master unmute && amixer set Master 5%-

XF86AudioMute
    amixer set Master toggle 

# Programs
super + n
    alacritty -e nnn -e
super + q
    thunar
super + r
    chromium
super + v
    zathura

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# Set a random wallpaper
super + alt + w
    feh --bg-fill --no-fehbg --randomize ~/Images/Wallpapers

# Screenshot
super + Print
    maim -su -m 10| xclip -se c -t image/png
super + shift + Print
    maim -su -m 10 ~/Images/Captures/$(date +%s).png

# Screen Brightness
super + u
    xrandr --output DVI-I-1 --brightness 0.7 && xrandr --output HDMI-0 --brightness 0.7
super + y
    xrandr --output DVI-I-1 --brightness 1.0 && xrandr --output HDMI-0 --brightness 1.0
